# Auto detect text files and perform LF normalization
* text=auto

# Java sources
*.java text eol=lf
*.gradle text eol=lf
*.properties text eol=lf

# Web
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md text eol=lf

# Shell scripts
*.sh text eol=lf
gradlew text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
